{
  "env": {
    "browser": true
  },
  "globals": {
    "global": true,
    "describe": true,
    "it": true
  },
  "ecmaFeatures": {
    "blockBindings": true,
    "forOf": true,
    "jsx": true,
    "modules": true,
    "classes": true,
    "arrowFunctions": true,
    "defaultParams": true,
    "destructuring": true
  },
  "plugins": ["react"],
  "rules": {
    "semi": [2, "never"],
    "quotes": "single",
    "new-cap": 0
  }
}
